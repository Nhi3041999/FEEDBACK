@model FEEDBACK.Models.KHACHHANG

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa khách hàng</h2>

<h4 style="font-style:initial; color:red">Bạn có chắc muốn xóa khách hàng này không?</h4>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENKH)
        </dd>
        <br />
        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>
        <br />
        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DIACHI)
        </dd>
        <br />
        <dt>
            Giới tính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GIOITINH)
        </dd>
        <br />
        <dt>
            Ngày sinh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NGAYSINH)
        </dd>
        <br />
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> 
            <br /><br />
            @Html.ActionLink(">>Trở lại danh sách thông tin", "Index")
        </div>
    }
</div>
